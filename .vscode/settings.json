{
    // Set the default
    "editor.formatOnSave": false,
    // Enable per-language
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "editor.codeActionsOnSave": {
        // For ESLint
        "source.fixAll.eslint": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.codeAction.showDocumentation": {
    
        "enable": true
    }
}